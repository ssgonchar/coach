/******************
     VARIABLES
******************/
$background = rgba(255,255,255,0)
$color = rgba(0,0,0,0.8)

$mainFont = "Roboto"
$labelFont = "Arial"

$fontSizePromo =38px
$fontSizeH1 = 17px
$fontSizeH2 = 15px
$contentTitle =
    font 25px
    color #1d4f93


$headerHeight = 653px

$fontColor = rgb(55, 55, 55)

$containerWidth = 960px


/******************
    CORE STYLES
*******************/

html
body
    padding 0
    margin 0
    font-family $mainFont
    font-color $color

.wrapper
    padding 20px
    background url("../img/header-bg.png") no-repeat
    background-position-y -50px

.page
    width 960px
    margin auto
    background $background
    background-position-y -50px

header
     height $headerHeight
     width 100%
     position relative
 ul.phones
    display block
    list-style none
    padding 0
    li.phones__item
        float left
        margin-right 2em
        .country
            font-size small
        .number
            font-size medium
            font-weight bolder

.promo__attention
    clear: both
.promo__form
    input[type=text]
    input[type=password]
    input[type=name]
        box-sizing border-box
        width 324px
        height 46px
        padding 15px
        border-radius 3px
        border 1px solid #dfdfdf
        transition all .2s ease-in-out
        outline none
        &:focus
            border 1px solid #ccc
            box-shadow 0 0px 5px 0px rgba(255, 255, 255, 0.94), inset 0 -1px 6px 2px rgba(0,0,0,0.3)
            transform  width 20px

    button
    input[type=submit]
        box-sizing border-box
        background #17a02b
        width 324px
        height 46px
        padding 15px
        border-radius 3px
        border 1px solid #dfdfdf
        transition all .2s ease-in-out
        font-size larger
        color white
        font-weight bolder
        &:hover
            outline none
            background rgba(67, 119, 75, 0.14)
            box-shadow 0 2px 1px 1px rgba(39, 39, 39, 0.38), inset 0 5px 15px 1px #FFF
            color #FFFFFF
            border-color rgba(226,255,241,0.81)
            text-shadow 0 1px 2px rgba(0, 0, 0, 0.8)


.header__column
    width 50%

.header__column--left
    float left

.header__column--right
    float right

.animation-target
    animation: animation 1000ms linear both;

.delay1s
    animation-delay .5s

.delay2s
    animation-delay .8s

.delay3s
    animation-delay .11s

.delay4s
    animation-delay .14s

.content__title
    {$contentTitle}

.content
    margin-bottom 5em

.reviews_users
    list-style none
    margin 0
    padding 0
    column-count 3

.reviews__item
    display block
    box-sizing border-box

.reviews__item--middle
    break-inside:avoid
    break-before: column
    break-after: column

.reviews__item--author
    font-weight bolder
    line-height 15px
    margin-top 1em
    float right

.reviews__item--author:before
    content "\02dc\00a0"
    float left
    line-height 30px

.reviews__item--userpic
    clear both
    text-align center
    margin-bottom 1em

.animation-target {
    animation: animation 750ms linear both;
}

